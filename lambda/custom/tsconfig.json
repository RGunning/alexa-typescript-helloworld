{
  "compilerOptions": {
    "module": "commonjs",
    "moduleResolution": "node",
    "target": "es6",
    "noImplicitAny": false,
    "outDir": "./dist",
    "sourceMap": true,
    "experimentalDecorators": true,
    "declaration": true,
    "typeRoots": [
      "./node_modules/@types"
    ]
  },
  "exclude": ["./node_modules", "./dist"],
  "include": ["src/**/*.ts"],
  "compileOnSave": false
}
